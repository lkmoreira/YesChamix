<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" android:layout_width="wrap_content">
            <stroke android:width="1dp" android:color="@color/black" />
            <solid android:color="@color/black" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp"
                android:bottom="1dp" />
            <corners android:radius="1dp" />

        </shape>
    </item>

    <item android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/cor_bordo" android:endColor="@color/cor_bordo"
                android:angle="270" android:centerColor="@color/cor_bordo" />
            <!-- border width and color -->
            <stroke android:width="1dp" android:color="@color/light_grey" />
        </shape>
    </item>
</layer-list>