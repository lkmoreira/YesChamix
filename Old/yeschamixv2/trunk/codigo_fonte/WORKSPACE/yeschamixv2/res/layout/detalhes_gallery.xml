<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fundotexto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/cor_fundo" >

        <RelativeLayout
            android:id="@+id/layoutDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fundotexto"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/lnlDados"
                android:layout_width="540dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtEstoque"
                    android:layout_width="540dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/cor_bordo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/codigoTexto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Código: "
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/codigo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nomeTexto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome:"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nome"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/descricaoTexto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Descrição: "
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descricaoProdutoGaleria"
                    android:layout_width="320dip"
                    android:layout_height="wrap_content"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/precoTexto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Preco:"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/preco"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/backwardImage"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_below="@+id/scrollView1"
        android:background="@android:color/transparent"
        android:src="@drawable/backward" />

</RelativeLayout>